@{
    // var path = HttpContextAccessor.HttpContext.Request.Path;
    var name = User.Identity.Name;
    // var employee = EmployeeServices.GetEmployeeByEmailAsync(name);
}
@{
    ViewData["Title"] = "Home Page";
}

<!-- Sale & Revenue Start -->
<div  class="alert "  style="background:white;display:block !important " role="alert">
    <span style="font-weight:600;margin-left:15px"> Chào Mừng Trở Lại @name</span>
   
    @* <span id="successMessage"></span> *@
</div>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div style="background:white" class=" rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-line fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Số Lượng Nhân Viên</p>
                    <h6 class="mb-0">@ViewBag.EmployeeCount</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div style="background:white" class=" rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-bar fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Số Lượng Phòng Ban</p>
                    <h6 class="mb-0">@ViewBag.DepartmentCount</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div style="background:white" class=" rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-area fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Số Lượng Đối Tác</p>
                    <h6 class="mb-0">38</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div style="background:white" class=" rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-pie fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Tình Trạng Thu Chi</p>
                    <h6 class="mb-0" style="color:forestgreen">Rất Tốt</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->
<!-- Sales Chart Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light text-center rounded p-4"  style="width: 500px ">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Worldwide Sales</h6>
                    <a href="">Show All</a>
                </div>
                <canvas id="pie-chart"  width="200" height="200"   style="width: 100px !important;"></canvas>
            </div>
        </div>
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light text-center rounded p-4" style="width: 500px ">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Salse & Revenue</h6>
                    <a href="">Show All</a>
                </div>
                <canvas id="doughnut-chart" style="width: 100px !important;"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="~/lib/chart/chart.min.js" asp-append-version="true"></script>
<script src="~/lib/waypoints/waypoints.min.js" asp-append-version="true"></script>
<script src="~/lib/owlcarousel/owl.carousel.min.js" asp-append-version="true"></script>
<script src="~/lib/tempusdominus/js/moment.min.js" asp-append-version="true"></script>
<script src="~/lib/tempusdominus/js/moment-timezone.min.js" asp-append-version="true"></script>
<script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
