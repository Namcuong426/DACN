<!-- Delete Reward Modal HTML -->
@foreach (var reward in Model.GenericResponse.Data)
{
    <div id="deleteRewardModal@(reward.Id)" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Delete" asp-controller="Reward" method="post">
                    <input type="hidden" name="Id" value="@reward.Id" />
                    <div class="modal-header">
                        <h4 class="modal-title">Xóa khen thưởng</h4>
                        <button type="button" class="btn-close" data-dismiss="modal" aria-hidden="true"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn xóa khen thưởng này?</p>
                        <p class="text-warning"><small>Hành động này không thể hoàn tác.</small></p>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                        <input type="submit" class="btn btn-danger" value="Xóa">
                    </div>
                </form>
            </div>
        </div>
    </div>
}
